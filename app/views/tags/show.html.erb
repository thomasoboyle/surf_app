<div class = "container-fluid">
<h1>Tags: <%= @tag.name.titleize %></h1>
  <h3>Surf Sessions Tagged with "<%= @tag.name.titleize %>"</h3>

  <ul>
    <% @tag.surf_sessions.each do |surf_session| %>
      <li><%= link_to surf_session.date, surf_session_path(surf_session) %> <%= surf_session.surfer %> <%= surf_session.spot.title %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'View All Tags', tags_path %></br>
  <%= link_to 'View All Surf Sessions', surf_sessions_path %>

</div>