<h1>Edit Comment</h1>

<%= form_for([@comment.surf_session, @comment]) do |f| %>
  <p>
    <strong>Name</strong><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <strong>Comment</strong><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', surf_session_path(@comment.surf_session) %>
