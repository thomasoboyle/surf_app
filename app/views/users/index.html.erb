<div class="container-fluid">
  <h1>Surfers</h1>

  <table class='table-condensed'>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'View Profile', user_path(user) %></td>
      </tr>
    <% end %>

  </table><br>
</div>
