<%= form_for @spot do |f| %>

  <% if @spot.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@spot.errors.count, "error") %>
        prohibited this surf spot from being saved:
      </h2>
      <ul>
        <% @spot.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.label :wave_type %><br>
    <%= f.select :wave_type, Spot.wave_types.to_a.map{ |key_and_index| [key_and_index[0].titleize, key_and_index[0]] } %>
  </p>

  <p>
    <%= f.submit 'Submit', class: "btn btn-default btn-xs" %>
  </p>

<% end %>
