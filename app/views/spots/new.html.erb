<p>Create a New Surf Spot</p>
<%= form_for :spot, url: spots_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  <p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', spots_path %>