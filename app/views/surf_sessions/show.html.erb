<p>
  <strong>Date:</strong>
  <%= @surf_session.date %>
</p>

<p>
  <strong>Spot:</strong>
  <%= @surf_session.spot.title %>
</p>

<p>
  <strong>Date:</strong>
  <%= @surf_session.date %>
</p>

<p>
  <strong>Start Time:</strong>
  <%= @surf_session.start_time %>
</p>

<p>
  <strong>End Time:</strong>
  <%= @surf_session.end_time %>
</p>

<p>
  <strong>Average Wave Height:</strong>
  <%= @surf_session.average_wave_height %>
</p>

<p>
  <strong>Session Summary:</strong>
  <%= @surf_session.session_summary %>
</p>

<h3>Comments</h3>
<% @surf_session.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>


<h4>Add a comment:</h4>
<%= form_for([@surf_session, @surf_session.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'All Surf Sessions', surf_sessions_path %>
