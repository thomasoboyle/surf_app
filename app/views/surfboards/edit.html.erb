<h1>Edit Surfboard</h1>

<%= form_for([@surfboard.user, @surfboard]) do |f| %>
  <p>
    <%= f.label :surfboard_brand %><br>
    <%= f.text_field :surfboard_brand %>
  </p>
  <p>
    <%= f.label :surfboard_length %><br>
    <%= f.text_field :surfboard_length %>
  </p>
  <p>
    <%= f.label :surfboard_type %><br>
    <%= f.select :surfboard_type, Surfboard.surfboard_types.to_a.map{ |key_and_index| [key_and_index[0].titleize, key_and_index[0]]} %>
  </p>
  <p>
    <%= f.label :surfboard_rating %><br>
    <%= f.select :surfboard_rating, Surfboard.surfboard_ratings.to_a.map{ |key_and_index| [key_and_index[0].titleize, key_and_index[0]]} %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', user_path(@surfboard.user) %>